
<h2 class='center' id='new-topic-header'>Login</h2>

<div class="container">

  {{#if message.length}}
  <div>{{message}}</div>
  {{/if}}

  <p>Log in below or sign up <a href="/signup">here</a>.</p>

  <form method="post" action="/login" class='col s12'>
    <div class='section input-field'>
      <input type="text" name="email" id="email" class="validate">
      <label for="email">Email</label>
    </div>

    <div class='section input-field'>
      <input type="text" name="password" id="password" class="validate">
      <label for="email">Password</label>
    </div>
    <div class='center'>
      <button class="btn submit waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right"></i>
      </button>
    </div>
  </form>

</div>

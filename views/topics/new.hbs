<div class="row">
  <h2 class='center'>Create New Topic</h2>
  <!-- can you think of a way to combine the code here with the code in edit.hbs? -->
  <!-- https://github.com/donpark/hbs#helpers-and-partials -->
  <form action="/topics" method="post" class='col s12'>
    <div class='section input-field'>
      <input type="text" name="name" class="validate">
      <label>Topic Name:</label>
    </div>

    <div class='section input-field'>
      <input type="text" name="description" class="validate">
      <label>Description:</label>
    </div>

    <div class='section input-field'>
      <input type="text" name="imageUrl" class="validate">
      <label>Image URL:</label>
    </div>
    <div class='center'>
      <button class="btn submit" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </div>
  </form>
</div>

<script src="/js/user-auth.js"></script>

<h1> {{topic.name}} </h1>
<p> {{topic.description}} </p>

<div class="editTopic"><a href="/topics/{{topic.id}}/edit">Edit</a></div>

<form method="post" action="/topics/{{topic.id}}?_method=delete">
  <input type="submit" value="delete topic">
</form>

<a href="/topics/{{_id}}/links/new">add new link</a>
{{#each topic.links}}
  <a href="{{url}}"><p>{{url}}</p></a>,<p>{{summary}}</p>
  <form method="post" action="/topics/{{../topic._id}}/links/{{_id}}?_method=delete">
          <input type="submit" value="Delete This Link">
      </form>
{{/each}}

<div id="link-new">
  <h3>New Link</h3>
  <form action="/topics/{{topic._id}}/links" method="post">
    <label>Title</label>
    <input type="text" name="title">
    <label>url</label>
    <input type="text" name="url">
    <label>summary</label>
    <input type="text" name="summary">
    <label>source</label>
    <input type="text" name="source">
    <input type="submit">
  </form>
</div>

<!-- Topic Info -->
<h2 class='center' id='new-topic-header'>{{topic.name}}</h2>
<h4 class="center">{{topic.description}}</h4>
<!-- Topic Edit -->


<div class='center'>
<a href="/topics/{{topic.id}}/edit" class='white-text'><button class="btn submit waves-effect waves-light" type="submit" name="action">Edit Topic
  <i class="material-icons right">send</i>
</button></a>
</div>

<!-- Topic Delete -->
<form method="post" class='deleteTopic center' action="/topics/{{topic.id}}">
  <input type="hidden" name="_method" value="DELETE" />
  <input type="submit" value="delete topic">
</form>
</span>
<div class="row">
  <ul class="collection with-header">
    <li class="collection-header center">
      <h4>Links on {{topic.name}}</h4>
    </li>
    <!-- Topic links -->
    {{#each topic.links}}
      <li class="collection-item">
        <div>{{title}}<a href="{{url}}" class="secondary-content"><i class="material-icons">send</i></a>
          <!-- link delete -->
          <form method="post" action="/topics/{{../topic._id}}/links/{{id}}">
            <input type="hidden" name="_method" value="DELETE" />
            <input type="submit" value="Delete This Link">
          </form>
        </div>
      </li>
    {{/each}}
  </ul>
  <!-- add link -->
  <div id="link-new">
    <h3>New Link</h3>
    <form action="/topics/{{topic._id}}/links" method="post">
      <label>Title</label>
      <input type="text" name="title">
      <label>url</label>
      <input type="text" name="url">
      <label>summary</label>
      <input type="text" name="summary">
      <label>source</label>
      <input type="text" name="source">
      <input type="submit">
    </form>
  </div>

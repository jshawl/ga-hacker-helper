
<div class="row center">
  <a href="/topics/new" id="download-button" class="btn-large waves-effect waves-light lighten-1">New Topic</a>
</div>
{{#each topics}}
  <div class='container' id='topicContainer'>
      <div class="row">
           <div class="col s12 m7">
             <div class="card small">
               <div class="card-image">
                 <img src="{{imageUrl}}">

            </div>
            <h5 class="card-title" id='topicName'>{{name}}</h5>
            <div class="card-content">
              <p>{{description}}</p>
            </div>
            <div class="card-action">
              <a href="/topics/{{_id}}">Learn More</a></div>
            </div>
          </div>
        </div>

    <!-- {{#each reminders}} -->
      <!-- <p class="reminder">{{body}}</p> -->
    <!-- {{/each}} -->
    <!-- <br> -->
  </div>
{{/each}}

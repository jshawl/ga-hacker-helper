<div class="row center">
  <a href="/topics/new" id="download-button" class="btn-large hoverable waves-effect waves-light lighten-1">New Topic</a>
</div>


<div class='container' id='topicContainer'>
  <div class="row">
  {{#each topics}}
    <div class="col s12">
      <div class="card small" id='topicCard'>
        <div id='color-one'>
        <div class="card-image">
          <img src="{{imageUrl}}">

        </div>

          <div class='topic-description center'>
            <h5 class="card-title center" id='topicName'>{{name}}</h5>
          <p class='center-align' id='topicDescription'>{{description}}</p>

      </div>
      </div>
        <div class="card-action hoverable" id='learn-more'>
          <a class='white-text' href="/topics/{{_id}}">Learn More</a></div>
        </div>
      </div>
  {{/each}}
  </div>
</div>

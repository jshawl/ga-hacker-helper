<div class="row center">
  <a href="/topics/new" id="download-button" class="btn-large hoverable waves-effect waves-light lighten-1">New Topic</a>
</div>
{{#each topics}}
<div class='container' id='topicContainer'>
  <div class="row">
    <div class="col s12">
      <div class="card activator" id='topicCard'>
        <div id='color-one' class='center'>
          <div class="card-image waves-effect waves-block waves-light">
            <img class='card-image activator responsive-img ' src="{{imageUrl}}">
          </div>
          <div class='card-content topic-description'>
            <span class="card-title indigo-text text-darken-4 activator" id='topicName'>{{name}}: </span>
            <p class='activator indigo-text text-lighten-4' id='topicDescription'>{{description}}</p></br>
          </div>
        </div>
        <div class="card-reveal  brown lighten-4">
          <span class="card-title center grey-text text-darken-4">{{name}}<i class="material-icons right">close</i></span>

          <ul>
            {{#each links}}
            <li class="collection-item">
              <div class='row'><strong>{{title}}: </strong>
                {{summary}}
                <a href="{{url}}" class="indigo-text text-darken-4 material-icons secondary-content">send</a>
              </div>
            </li>
            {{/each}}
          </ul>
          <div class='center'>
          <a href="/topics/{{_id}}" class='white-text' class="btn submit waves-effect waves-light" type="submit" name="action">Add Resource
            <i class="material-icons right">send</i></a>
          </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}

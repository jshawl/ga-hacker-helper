<div class="row center">
  <a href="/topics/new" id="download-button" class="btn-large hoverable waves-effect waves-light lighten-1">New Topic</a>
</div>
{{#each topics}}
<div class='container' id='topicContainer'>
  <div class="row">
    <div class="col s12">
      <div class="card activator" id='topicCard'>
        <div id='color-one' class='center'>
          <div class="card-image waves-effect waves-block waves-light">
            <img class='card-image activator responsive-img ' src="{{imageUrl}}">
          </div>
          <div class='card-content topic-description activator'>
            <p class="card-title white-text text-darken-4" id='topicName'>{{name}}: </p>
            <p class='indigo-text text-lighten-4' id='topicDescription'>{{description}}</p></br>
          </div>
        </div>
        <div class="card-reveal  brown lighten-4 collection">

          <span class="card-title center grey-text text-darken-4">{{name}}<i class="material-icons right">close</i></span>

            {{#each links}}
            <a href="{{url}}" class="indigo-text text-darken-4 collection-item">
              <strong>{{title}}: </strong>
                {{summary}}</a>
            {{/each}}
          </ul>
          <div class='center add-topic'>
            <a href="/topics/{{_id}}" class="btn submit waves-effect waves-light" type="submit" name="action">Add Resource</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/each}}

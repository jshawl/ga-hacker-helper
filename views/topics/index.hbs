<div class="row center">
  <a href="/topics/new" id="download-button" class="btn-large hoverable waves-effect waves-light lighten-1">New Topic</a>
</div>


<div class='container' id='topicContainer'>
  <div class="row">
    {{#each topics}}
    <div class="col s12">
      <div class="card medium activator" id='topicCard'>
        <div id='color-one' class='center'>
          <div class="card-image waves-effect waves-block waves-light">
            <img class='card-image activator responsive-img ' src="{{imageUrl}}">
          </div>
          <div class='card-content topic-description '>
            <span class="card-title activator" id='topicName'>{{name}}<i class="material-icons right">more_vert</i></span>
            <p class='center-align activator' id='topicDescription'>{{description}}</p>
          </div>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">{{name}}<i class="material-icons right">close</i></span>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>

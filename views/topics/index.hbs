
<div class="row center">
  <a href="/topics/new" id="download-button" class="btn-large waves-effect waves-light lighten-1">New Topic</a>
</div>
{{#each topics}}

      <div class="row">
           <div class="col s12 m7">
             <div class="card">
               <div class="card-image">
                 <img src="images/{{imageUrl}}">
                 <span class="card-title">{{name}}</span>
            </div>
            <div class="card-content">
              <p>{{description}}</p>
            </div>
            <div class="card-action">
              <a href="/topics/{{_id}}">Learn More</a></div>
            </div>
          </div>
        </div>

